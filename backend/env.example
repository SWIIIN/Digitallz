# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/digitallz?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/digitallz?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_REFRESH_EXPIRES_IN="30d"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# External APIs
AMAZON_API_KEY="your_amazon_api_key"
ETSY_API_KEY="your_etsy_api_key"
EBAY_API_KEY="your_ebay_api_key"
SHOPIFY_API_KEY="your_shopify_api_key"
GUMROAD_API_KEY="your_gumroad_api_key"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@digitallz.com"
FROM_NAME="Digitallz"

# Application Configuration
NODE_ENV="development"
PORT=3001
API_VERSION="v1"
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"
LOG_MAX_SIZE="20m"
LOG_MAX_FILES=5

# Backup Configuration
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Monitoring
SENTRY_DSN="your_sentry_dsn"
PROMETHEUS_PORT=9090

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"
COOKIE_SECRET="your-cookie-secret"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Queue Configuration
QUEUE_REDIS_URL="redis://localhost:6379"
QUEUE_CONCURRENCY=5

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_MONITORING=true
