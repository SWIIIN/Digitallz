# Railway Environment Variables for Digitallz Backend
# Copy these to your Railway project environment variables

# Application
NODE_ENV=production
PORT=3001
APP_NAME=Digitallz Keywords Platform
APP_VERSION=1.0.0

# Database (Railway will provide these automatically)
# DATABASE_URL will be set by Railway PostgreSQL service
# REDIS_URL will be set by Railway Redis service

# JWT Authentication (Generate secure keys)
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# External APIs (Get these from respective platforms)
AMAZON_API_KEY=your_amazon_api_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag

ETSY_API_KEY=your_etsy_api_key
ETSY_SECRET_KEY=your_etsy_secret_key

EBAY_API_KEY=your_ebay_api_key
EBAY_SECRET_KEY=your_ebay_secret_key

SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_SECRET_KEY=your_shopify_secret_key

GUMROAD_API_KEY=your_gumroad_api_key

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_CURRENCY=eur

# CORS (Allow your domain)
CORS_ORIGIN=https://digitallz.com,https://www.digitallz.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ITEMS=10000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true
ENABLE_LOGGING=true
