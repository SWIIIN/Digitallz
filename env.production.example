# Digitallz Platform - Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Application
NODE_ENV=production
APP_NAME=Digitallz Keywords Platform
APP_VERSION=1.0.0
APP_URL=https://digitallz.com
API_URL=https://api.digitallz.com

# Database
DATABASE_URL=postgresql://postgres:YOUR_DATABASE_PASSWORD@your-db-host:5432/digitallz
POSTGRES_DB=digitallz
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_DATABASE_PASSWORD
POSTGRES_HOST=your-db-host
POSTGRES_PORT=5432

# Redis Cache
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@your-redis-host:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_HOST=your-redis-host
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=YOUR_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# External APIs
AMAZON_API_KEY=YOUR_AMAZON_API_KEY
AMAZON_SECRET_KEY=YOUR_AMAZON_SECRET_KEY
AMAZON_ASSOCIATE_TAG=YOUR_AMAZON_ASSOCIATE_TAG

ETSY_API_KEY=YOUR_ETSY_API_KEY
ETSY_SECRET_KEY=YOUR_ETSY_SECRET_KEY

EBAY_API_KEY=YOUR_EBAY_API_KEY
EBAY_SECRET_KEY=YOUR_EBAY_SECRET_KEY

SHOPIFY_API_KEY=YOUR_SHOPIFY_API_KEY
SHOPIFY_SECRET_KEY=YOUR_SHOPIFY_SECRET_KEY

GUMROAD_API_KEY=YOUR_GUMROAD_API_KEY

# Payment Processing
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET
STRIPE_CURRENCY=eur

# Email Service
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@digitallz.com
SENDGRID_FROM_NAME=Digitallz Team

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=YOUR_SENTRY_DSN
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_LICENSE_KEY

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://digitallz.com,https://www.digitallz.com

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ITEMS=10000

# Rate Limiting
RATE_LIMIT_API=100
RATE_LIMIT_SEARCH=10
RATE_LIMIT_AUTH=5

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true
ENABLE_LOGGING=true

# Development/Testing
ENABLE_SWAGGER=false
ENABLE_DEBUG=false
ENABLE_MOCK_APIS=false
